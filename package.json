{
  "name": "ng-pipes",
  "version": "0.1.2",
  "description": "a8m/angular-filter for Angular 2",
  "files": [
    "src",
    "dist/*.js",
    "index.d.ts",
    "tsconfig.json"
  ],
  "main": "dist/ng-pipes.umd.js",
  "scripts": {
    "tsc": "node_modules/.bin/tsc -p .",
    "karma": "node_modules/.bin/karma start karma.conf.js",
    "test": "ng test",
    "ngc": "node_modules/.bin/ngc -p tsconfig.test.json",
    "package": "ng-packagr -p package.json",
    "format": "./node_modules/.bin/clang-format --glob=\"{@(src|test)/**/*.ts,*.js}\" -i",
    "lint": "tslint '{src,test}/**/*.ts' -e '**/*.d.ts'"
  },
  "author": "Ariel Mashraki",
  "repository": {
    "type": "git",
    "url": "https://github.com/a8m/ng-pipes.git"
  },
  "keywords": [
    "angular",
    "angular2",
    "angularjs",
    "pipes",
    "filters",
    "angular-filter",
    "angular-filters",
    "ng-pipes",
    "ng",
    "a8m",
    "lodash",
    "underscore"
  ],
  "license": "MIT",
  "devDependencies": {
    "@angular/cli": "1.6.7",
    "@angular/animations": "^5.2.0",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "clang-format": "^1.0.46",
    "codelyzer": "^2.0.0",
    "core-js": "^2.4.1",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "2.2.0",
    "rxjs": "^5.5.6",
    "ts-node": "~4.1.0",
    "tslib": "1.7.1",
    "tslint": "^4.4.2",
    "typescript": "~2.5.3",
    "zone.js": "^0.8.19"
  },
  "dependencies": {
    "karma-phantomjs-launcher": "^1.0.4"
  },
  "ngPackage": {
    "dest": "dist",
    "lib": {
      "entryFile": "public_api.ts"
    }
  }
}
